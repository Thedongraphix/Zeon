{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": [
    "index.ts",
    "helpers/**/*.ts",
    "utils/**/*.ts",
    "scripts/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend/**/*",
    "dist/**/*",
    "build/**/*",
    "**/*.jsx",
    "**/*.tsx"
  ]
}